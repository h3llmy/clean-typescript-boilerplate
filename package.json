{
  "name": "typescript-boilerplate",
  "version": "1.0.0",
  "description": "my typescript boilerplate",
  "main": "index.js",
  "engines": {
    "node": ">=18.6.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon -e ts,tsx,json --exec ts-node ./src/server.ts",
    "obfuscator": "javascript-obfuscator -o dist --exclude='node_modules'",
    "build": "tsc",
    "start": "pm2 start ecosystem.config.json --no-daemon",
    "lint": "eslint . --ext .ts",
    "test": "jest --watchAll --detectOpenHandles",
    "create:token": "ts-node ./src/utils/commandFunction/generateJwtToken.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "author": "h3llmy",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-fileupload": "^1.4.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/express-fileupload": "^1.4.2",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/morgan": "^1.9.6",
    "@types/node-cron": "^3.0.9",
    "@types/nodemailer": "^6.4.11",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.11",
    "@types/supertest": "^2.0.14",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^8.16.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
